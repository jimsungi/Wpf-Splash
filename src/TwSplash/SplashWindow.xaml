<Window
    x:Class="com.tigerword.splash.SplashWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:com.tigerword.splash"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="-"
    Width="600"
    Height="240"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <Grid Margin="0,0,0,0" Background="Red">
        <Image
            x:Name="splash_image"
            Margin="0,0,0,0"
            Source="/TigerSplash;component/img/tigerrabbit.png" Stretch="Fill" />
    </Grid>
</Window>
